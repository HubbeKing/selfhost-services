apiVersion: v1
kind: Secret
metadata:
  name: oauth2-proxy-config
stringData:
  oauth2-proxy.cfg: |
    http_address = "0.0.0.0:4180"
    reverse_proxy = true
    email_domains = [ "*" ]
    cookie_domains = [ ".hubbe.club" ]
    cookie_name = "_oauth2_proxy"
    cookie_secret = ""
    cookie_secure = true
    cookie_expire = "168h"
    cookie_refresh = "24h"
    cookie_httponly = true
    set_xauthrequest = true

    # redis session store, as OIDC sessions get too big for cookies
    session_store_type = "redis"
    redis_use_sentinel = true
    redis_sentinel_master_name = "oauth2"
    redis_sentinel_connection_urls = ["redis://oauth2-redis-0.oauth2-redis.default.svc.cluster.local:26379", "redis://oauth2-redis-1.oauth2-redis.default.svc.cluster.local:26379", "redis://oauth2-redis-2.oauth2-redis.default.svc.cluster.local:26379"]

    # keycloak provider, using OIDC for better compat and cookie_refresh support
    provider = "oidc"
    provider_display_name = "Keycloak OIDC Provider"
    client_id = "oauth2-proxy"
    client_secret = ""
    redirect_url = "https://login.hubbe.club/oauth2/callback"
    oidc_issuer_url = "https://keycloak.hubbe.club/auth/realms/master"

    # allowed domains
    whitelist_domains = [ ".hubbe.club" ]
