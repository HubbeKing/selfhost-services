apiVersion: apps/v1
kind: Deployment
metadata:
  name: roundcubemail-db
spec:
  replicas: 1  
  selector:
    matchLabels:
      app: roundcubemail-db
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: roundcubemail-db
    spec:
      containers:
        - image: mariadb:10
          imagePullPolicy: Always
          name: roundcubemail-db
          envFrom:
            - secretRef:
                name: roundcubemail-envs
          volumeMounts:
            - name: roundcubemail-db-storage
              mountPath: /var/lib/mysql
      volumes:
        - name: roundcubemail-db-storage
          hostPath:
            path: /home/hubbe/services/roundcubemail-db
