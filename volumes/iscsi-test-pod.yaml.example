apiVersion: v1
kind: Pod
metadata:
  labels:
    test: iscsi-pvc-pod
  name: iscsi-pv-pod
spec:
  containers:
    - name: iscsi-pv-busybox
      image: busybox
      command: ["sleep", "60000"]
      volumeMounts:
        - name: iscsi-vol
          mountPath: /test
          readOnly: false
  volumes:
    - name: iscsi-vol
      persistentVolumeClaim:
        claimName: testclaim
